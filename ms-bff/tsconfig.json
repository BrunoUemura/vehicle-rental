{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2020"],
    "rootDir": ".",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"]
    },
    "rootDirs": ["./src", "./test"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/*", "dist", "test"]
}
