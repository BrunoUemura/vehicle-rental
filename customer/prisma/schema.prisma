datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Customer {
  customerId        String    @id @default(uuid())
  name              String
  email             String    @unique
  password          String
  documentNumber    String    @unique
  phoneNumber       String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  deletedAt         DateTime?
  address           Address[]
}

model Address {
  addressId         String    @id @default(uuid())
  customer          Customer  @relation(fields: [customerId], references: [customerId])
  customerId        String    @unique
  street            String
  number            Int
  district          String
  city              String   
  state             String   
  country           String
  zipCode           String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}